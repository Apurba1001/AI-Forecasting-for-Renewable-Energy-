# Dockerfile.hw
FROM python:3.9-slim

WORKDIR /app

# Install dependencies for Holt-Winters
RUN pip install fastapi uvicorn pandas statsmodels joblib codecarbon



# Copy source code and models
COPY src/ /app/src/
COPY models/ /app/models/
COPY config.py /app/

# Expose port 8002
EXPOSE 8002

HEALTHCHECK CMD curl --fail http://localhost:8002/health || exit 1

# Run the Holt-Winters Service
CMD ["uvicorn", "src.api.lightweight_service:app", "--host", "0.0.0.0", "--port", "8002"]